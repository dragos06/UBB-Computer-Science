@{
	Layout = null;
}
<html>
<head>
	<title>Channels Owned by a Person</title>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script>
		$(document).ready(function() {
			$("#searchButton").click(function(){
				const personInput = document.getElementById("personInput").value;
				$.get(`/Main/GetChannelsByPerson?person=${personInput}`, (data)=>{
					$("#channels").html(data);
				});
			});
		});
	</script>
</head>
<body>
	<h2>Channels Owned by a Person</h2>
	<label>Person name: <input type="text" id="personInput" /> </label>
	<button id="searchButton">Search</button>
	<div id="channels"></div>
</body>
</html>
