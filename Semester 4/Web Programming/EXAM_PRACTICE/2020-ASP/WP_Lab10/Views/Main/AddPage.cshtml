@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Add Document</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f8;
            padding: 30px;
            max-width: 480px;
            margin: 40px auto;
            border-radius: 8px;
            box-shadow: 0 0 12px rgba(0,0,0,0.1);
            color: #333;
        }

        h1 {
            text-align: center;
            margin-bottom: 25px;
            color: #222;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 15px;
            font-weight: 600;
        }

        input[type="text"],
        input[type="number"] {
            width: 100%;
            padding: 8px 10px;
            margin-top: 5px;
            border: 1.5px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            box-sizing: border-box;
            transition: border-color 0.3s ease;
        }

            input[type="text"]:focus,
            input[type="number"]:focus {
                border-color: #4a90e2;
                outline: none;
            }

        button {
            background-color: #4a90e2;
            color: white;
            border: none;
            padding: 12px;
            font-size: 18px;
            font-weight: 600;
            border-radius: 6px;
            cursor: pointer;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #357ABD;
            }
    </style>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#addDocumentForm").submit(function (e) {
                e.preventDefault();
                var formData = $(this).serialize();

                $.post("/Main/SaveDocument", formData, function (response) {
                    alert("Document added!");
                    window.location.href = "/Main/Index";
                }).fail(function () {
                    alert("Failed to add document.");
                });
            });
        });
    </script>
</head>

<body>
    <h1>Add New Document</h1>
    <form id="addDocumentForm">
        <label>Author: <input type="text" name="author" required /></label><br />
        <label>Title: <input type="text" name="title" required /></label><br />
        <label>Pages: <input type="number" name="pages" required /></label><br />
        <label>Type: <input type="text" name="type" required /></label><br />
        <label>Format: <input type="text" name="format" required /></label><br />
        <button type="submit">Add</button>
    </form>
</body>

</html>